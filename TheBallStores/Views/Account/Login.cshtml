@{
    ViewData["Title"] = "Đăng Nhập";
}

<div class="row justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="col-md-5">
        <div class="card-vortex p-5">
            <h2 class="text-center mb-4" style="color: var(--accent-purple); text-shadow: var(--accent-glow);">
                ĐĂNG NHẬP VÀO TRANG
            </h2>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger bg-transparent text-danger border-danger">@ViewBag.Error</div>
            }

            <form asp-action="Login" method="post">
                <div class="mb-4">
                    <label class="form-label text-muted">EMAIL TRUY CẬP</label>
                    <input type="email" name="email" class="form-control form-control-vortex" required placeholder="name@example.com">
                </div>
                <div class="mb-4">
                    <label class="form-label text-muted">MẬT KHẨU</label>
                    <input type="password" name="password" class="form-control form-control-vortex" required>
                </div>

                <button type="submit" class="btn btn-vortex w-100 py-2 fs-5">ĐĂNG NHẬP</button>
            </form>

            <div class="text-center mt-4">
                <span class="text-muted">Chưa có tài khoản?</span>
                <a asp-action="Register" style="color: var(--accent-purple);">Thiết lập danh tính mới</a>
            </div>
        </div>
    </div>
</div>