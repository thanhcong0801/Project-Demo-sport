@model TheBallStores.Models.DonHang
@{
    ViewData["Title"] = "Chi tiết Đơn hàng #" + Model.MaDonHang;

    // Tính toán hiển thị
    var thucTra = Model.TongTien ?? 0;
    var giamGia = Model.SoTienGiam ?? 0;
    var tamTinh = thucTra + giamGia;

    // Danh sách các trạng thái Admin có thể chọn
    var statuses = new List<string> { "Mới đặt (COD)", "Chờ thanh toán", "Đang giao", "Đã hủy", "Hoàn thành" };

    // Kiểm tra quyền Admin
    var isAdmin = Context.Session.GetString("VaiTro") == "Admin";

    // Logic chọn màu badge trạng thái
    var badgeClass = Model.TrangThai switch
    {
        "Hoàn thành" or "Đã thanh toán (VNPay)" => "bg-success bg-opacity-10 text-success border border-success",
        "Đã hủy" or "Hủy (Lỗi thanh toán)" => "bg-danger bg-opacity-10 text-danger border border-danger",
        "Chờ thanh toán" or "Mới đặt (COD)" => "bg-warning text-dark border border-warning-subtle",
        "Đang giao" => "bg-info bg-opacity-10 text-info border border-info",
        _ => "bg-secondary bg-opacity-10 text-secondary border border-secondary"
    };
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-uppercase text-dark mb-0">Chi Tiết Đơn Hàng <span class="text-primary">#@Model.MaDonHang</span></h2>
            <p class="text-muted small mb-0">
                Ngày đặt: <strong>@Model.NgayDat?.ToString("dd/MM/yyyy HH:mm")</strong>
            </p>
        </div>
        <div>
            @if (isAdmin)
            {
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Danh sách đơn hàng
                </a>
            }
            else
            {
                <a asp-action="LichSuGiaoDich" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Lịch sử giao dịch
                </a>
            }
        </div>
    </div>

    <div class="row g-4">
        <!-- CỘT TRÁI: THÔNG TIN TỔNG QUAN -->
        <div class="col-lg-4">
            <!-- Trạng thái & Tổng quan -->
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white border-0 pt-4 px-4 pb-0">
                    <h5 class="fw-bold text-primary mb-0">
                        <i class="bi bi-info-circle me-2"></i>Tổng Quan
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4 text-center">
                        <span class="badge @badgeClass px-3 py-2 rounded-pill fs-6 fw-normal">
                            @Model.TrangThai
                        </span>
                    </div>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0">
                            <span class="text-muted">Tạm tính:</span>
                            <span class="fw-bold">@tamTinh.ToString("#,##0") đ</span>
                        </li>

                        @if (giamGia > 0)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0 text-success">
                                <span><i class="bi bi-ticket-perforated-fill me-1"></i> Voucher (@(Model.MaVoucher ?? "N/A")):</span>
                                <span>- @giamGia.ToString("#,##0") đ</span>
                            </li>
                        }

                        <li class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-0 border-top mt-2 pt-3">
                            <span class="fw-bold text-dark fs-5">Thành tiền:</span>
                            <span class="text-primary fw-bold fs-4">@thucTra.ToString("#,##0") đ</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Thông tin giao hàng -->
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white border-0 pt-4 px-4 pb-0">
                    <h5 class="fw-bold text-secondary mb-0">
                        <i class="bi bi-truck me-2"></i>Giao Hàng
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <small class="text-muted text-uppercase fw-bold">Người nhận</small>
                        <div class="fw-bold text-dark">@(Model.TenNguoiNhan ?? "N/A")</div>
                        <div class="small text-muted">@Model.MaKhNavigation?.Email</div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted text-uppercase fw-bold">Điện thoại</small>
                        <div class="text-dark">@(Model.SoDienThoaiNguoiNhan ?? "N/A")</div>
                    </div>
                    <div>
                        <small class="text-muted text-uppercase fw-bold">Địa chỉ</small>
                        <div class="text-dark">@(Model.DiaChiGiaoHang ?? "N/A")</div>
                    </div>
                </div>
            </div>

            <!-- FORM CẬP NHẬT TRẠNG THÁI (CHỈ ADMIN) -->
            @if (isAdmin)
            {
                <div class="card border-0 shadow-sm rounded-4 bg-light">
                    <div class="card-body p-4">
                        <h6 class="fw-bold text-dark mb-3">Cập Nhật Trạng Thái</h6>
                        <form asp-controller="DonHangs" asp-action="CapNhatTrangThai" method="post">
                            <input type="hidden" name="maDonHang" value="@Model.MaDonHang" />
                            <div class="mb-3">
                                <select name="trangThaiMoi" class="form-select border-secondary">
                                    @foreach (var status in statuses)
                                    {
                                        <option value="@status" selected="@(status == Model.TrangThai)">@status</option>
                                    }
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary w-100 fw-bold shadow-sm">
                                <i class="bi bi-save me-1"></i> Lưu Thay Đổi
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>

        <!-- CỘT PHẢI: CHI TIẾT SẢN PHẨM -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 pt-4 px-4 pb-0">
                    <h5 class="fw-bold text-success mb-0">
                        <i class="bi bi-bag-check me-2"></i>Sản Phẩm Đã Mua
                    </h5>
                </div>
                <div class="card-body p-0 mt-3">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light text-secondary text-uppercase small fw-bold">
                                <tr>
                                    <th class="ps-4 py-3">Sản phẩm</th>
                                    <th class="py-3 text-center">Size</th>
                                    <th class="py-3 text-center">SL</th>
                                    <th class="py-3 text-end">Đơn giá</th>
                                    <th class="py-3 text-end pe-4">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ChiTietDonHangs)
                                {
                                    var tenSp = item.MaChiTietNavigation?.MaSpNavigation?.TenSp ?? "Sản phẩm không rõ";
                                    var anhSp = item.MaChiTietNavigation?.MaSpNavigation?.AnhDaiDien;
                                    var tenSize = item.MaChiTietNavigation?.MaSizeNavigation?.TenSize ?? "N/A";
                                    var thanhTien = item.SoLuong * (item.DonGia ?? 0);

                                    <tr>
                                        <td class="ps-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="me-3 flex-shrink-0">
                                                    <img src="~/images/products/@(string.IsNullOrEmpty(anhSp) ? "no-image.png" : anhSp)"
                                                         class="rounded border bg-light"
                                                         style="width: 50px; height: 50px; object-fit: cover;"
                                                         onerror="this.src='/images/no-image.png'">
                                                </div>
                                                <span class="fw-bold text-dark">@tenSp</span>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-light text-dark border">@tenSize</span>
                                        </td>
                                        <td class="text-center fw-bold">@item.SoLuong</td>
                                        <td class="text-end text-muted">@item.DonGia?.ToString("#,##0") đ</td>
                                        <td class="text-end pe-4 fw-bold text-primary">
                                            @thanhTien?.ToString("#,##0") đ
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>