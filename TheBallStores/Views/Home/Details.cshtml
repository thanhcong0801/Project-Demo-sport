@model TheBallStores.Models.SanPham

@{
    ViewData["Title"] = Model.TenSp;
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" class="text-decoration-none text-muted">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="/Store" class="text-decoration-none text-muted">Cửa hàng</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.TenSp</li>
        </ol>
    </nav>

    <div class="row g-5">
        <!-- CỘT TRÁI: ẢNH SẢN PHẨM -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-3">
                <div class="p-4 bg-light text-center position-relative">
                    <img id="mainImage" src="~/images/products/@(string.IsNullOrEmpty(Model.AnhDaiDien) ? "no-image.png" : Model.AnhDaiDien)"
                         class="img-fluid rounded-3"
                         style="max-height: 500px; object-fit: contain; transition: transform 0.3s ease;"
                         alt="@Model.TenSp"
                         onerror="this.src='/images/no-image.png'">
                </div>
            </div>

            <!-- Ảnh phụ (Thumbnails) -->
            @if (Model.HinhAnhSanPhams != null && Model.HinhAnhSanPhams.Any())
            {
                <div class="d-flex gap-2 overflow-auto py-2">
                    <!-- Ảnh chính thumbnail -->
                    <div class="thumbnail-wrapper active" onclick="changeImage(this, '/images/products/@Model.AnhDaiDien')">
                        <img src="~/images/products/@Model.AnhDaiDien" class="img-thumbnail rounded-3" alt="Main" onerror="this.src='/images/no-image.png'">
                    </div>
                    <!-- Các ảnh phụ thumbnails -->
                    @foreach (var img in Model.HinhAnhSanPhams)
                    {
                        <div class="thumbnail-wrapper" onclick="changeImage(this, '/images/products/@img.DuongDanAnh')">
                            <img src="~/images/products/@img.DuongDanAnh" class="img-thumbnail rounded-3" alt="Sub" onerror="this.src='/images/no-image.png'">
                        </div>
                    }
                </div>
            }
        </div>

        <!-- CỘT PHẢI: THÔNG TIN CHI TIẾT -->
        <div class="col-lg-6">
            <div class="ps-lg-4">
                <h6 class="text-uppercase text-muted fw-bold mb-2">
                    <i class="bi bi-tag-fill me-1"></i> @(Model.MaLoaiNavigation?.TenLoai ?? "Sản phẩm thể thao")
                </h6>
                <h1 class="fw-bolder text-dark mb-3">@Model.TenSp</h1>

                <div class="d-flex align-items-center mb-4">
                    <h3 class="text-primary fw-bold mb-0 me-3">@Model.GiaBan.ToString("#,##0") đ</h3>
                    @if (Model.SanPhamChiTiets != null && Model.SanPhamChiTiets.Any(x => (x.SoLuongTon ?? 0) > 0))
                    {
                        <span class="badge bg-success bg-opacity-10 text-success border border-success rounded-pill px-3 py-2">
                            <i class="bi bi-check-circle me-1"></i> Còn hàng
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger bg-opacity-10 text-danger border border-danger rounded-pill px-3 py-2">
                            <i class="bi bi-x-circle me-1"></i> Hết hàng
                        </span>
                    }
                </div>

                <p class="text-muted mb-4 lead fs-6">
                    @(string.IsNullOrEmpty(Model.MoTa) ? "Sản phẩm chất lượng cao từ The Ball Stores. Thiết kế hiện đại, bền bỉ, phù hợp cho mọi hoạt động thể thao của bạn." : Model.MoTa)
                </p>

                <hr class="text-muted opacity-25 my-4">

                <!-- FORM MUA HÀNG -->
                <form asp-controller="GioHang" asp-action="ThemVaoGio" method="post">
                    <input type="hidden" name="maSp" value="@Model.MaSp" />

                    <div class="mb-4">
                        <label class="form-label fw-bold text-uppercase small text-muted mb-2">Chọn Kích Thước (Size):</label>
                        <div class="d-flex flex-wrap gap-2">
                            @if (Model.SanPhamChiTiets != null && Model.SanPhamChiTiets.Any())
                            {
                                @foreach (var chiTiet in Model.SanPhamChiTiets.OrderBy(ct => ct.MaSizeNavigation.TenSize))
                                {
                                    var isDisabled = (chiTiet.SoLuongTon ?? 0) <= 0;
                                    <div class="position-relative">
                                        <input type="radio" class="btn-check" name="maSize" id="size_@chiTiet.MaSize" value="@chiTiet.MaSize" @(isDisabled ? "disabled" : "") required>
                                        <label class="btn btn-outline-dark rounded-3 px-3 py-2 fw-bold @(isDisabled ? "opacity-50 text-decoration-line-through" : "")" for="size_@chiTiet.MaSize">
                                            @chiTiet.MaSizeNavigation.TenSize
                                        </label>
                                    </div>
                                }
                            }
                            else
                            {
                                <span class="text-danger small fst-italic">Hiện chưa có thông tin size.</span>
                            }
                        </div>
                        <div id="sizeError" class="text-danger small mt-2 d-none">Vui lòng chọn size trước khi thêm vào giỏ!</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-uppercase small text-muted mb-2">Số Lượng:</label>
                        <div class="input-group" style="width: 140px;">
                            <button class="btn btn-outline-secondary" type="button" onclick="this.parentNode.querySelector('input[type=number]').stepDown()">-</button>
                            <input type="number" name="soLuong" class="form-control text-center fw-bold border-secondary" value="1" min="1" max="10">
                            <button class="btn btn-outline-secondary" type="button" onclick="this.parentNode.querySelector('input[type=number]').stepUp()">+</button>
                        </div>
                    </div>

                    <div class="d-flex gap-3 mt-5">
                        <button type="submit" class="btn btn-dark btn-lg flex-grow-1 py-3 text-uppercase shadow-sm fw-bold">
                            <i class="bi bi-cart-plus me-2"></i> Thêm vào giỏ hàng
                        </button>
                        <button type="button" class="btn btn-outline-danger btn-lg px-4" title="Yêu thích">
                            <i class="bi bi-heart"></i>
                        </button>
                    </div>
                </form>

                <!-- Chính sách -->
                <div class="row mt-5 pt-4 border-top border-light g-3">
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-truck fs-4 me-3 text-primary"></i>
                            <div>
                                <h6 class="fw-bold mb-0 text-dark">Giao hàng</h6>
                                <small class="text-muted">Toàn quốc</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-arrow-repeat fs-4 me-3 text-primary"></i>
                            <div>
                                <h6 class="fw-bold mb-0 text-dark">Đổi trả</h6>
                                <small class="text-muted">Trong 7 ngày</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-shield-check fs-4 me-3 text-primary"></i>
                            <div>
                                <h6 class="fw-bold mb-0 text-dark">Chính hãng</h6>
                                <small class="text-muted">Cam kết 100%</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-headset fs-4 me-3 text-primary"></i>
                            <div>
                                <h6 class="fw-bold mb-0 text-dark">Hỗ trợ</h6>
                                <small class="text-muted">Tư vấn 24/7</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .thumbnail-wrapper {
        cursor: pointer;
        width: 70px;
        height: 70px;
        border: 2px solid transparent;
        border-radius: 8px;
        transition: all 0.2s;
        opacity: 0.6;
    }

        .thumbnail-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .thumbnail-wrapper.active, .thumbnail-wrapper:hover {
            border-color: var(--bs-primary);
            opacity: 1;
        }
    /* Ẩn input số mặc định */
    input[type=number]::-webkit-inner-spin-button {
        -webkit-appearance: none;
    }
</style>

<script>
    function changeImage(element, src) {
        // Đổi ảnh chính với hiệu ứng mờ nhẹ
        var mainImg = document.getElementById('mainImage');
        mainImg.style.opacity = 0;
        setTimeout(function() {
            mainImg.src = src;
            mainImg.style.opacity = 1;
        }, 150);

        // Cập nhật active class cho thumbnail
        document.querySelectorAll('.thumbnail-wrapper').forEach(el => el.classList.remove('active'));
        element.classList.add('active');
    }
</script>