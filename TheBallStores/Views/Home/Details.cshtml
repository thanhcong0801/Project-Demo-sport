@model TheBallStores.Models.SanPham
@* ⚠️ Nhớ kiểm tra namespace TheBallStores hay TheballStore *@

@{
    ViewData["Title"] = Model.TenSp;
}

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="#">@Model.MaLoaiNavigation?.TenLoai</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.TenSp</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                @if (!string.IsNullOrEmpty(Model.AnhDaiDien))
                {
                    <img src="~/images/products/@Model.AnhDaiDien" class="img-fluid rounded" alt="@Model.TenSp" style="width: 100%; object-fit: cover;">
                }
                else
                {
                    <img src="https://via.placeholder.com/600x600?text=No+Image" class="img-fluid rounded" alt="No image">
                }
            </div>
        </div>

        <div class="col-md-6">
            <h1 class="display-5 fw-bolder">@Model.TenSp</h1>

            <div class="fs-4 mb-3">
                <span class="text-danger fw-bold">@Model.GiaBan.ToString("#,##0") đ</span>
            </div>

            <p class="lead">
                @Model.MoTa ?? "Sản phẩm chất lượng cao từ TheballStore. Thiết kế hiện đại, bền bỉ, phù hợp cho mọi hoạt động thể thao của bạn."
            </p>

            <div class="card bg-light border-0 p-3 mt-4">
                <form>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Chọn Kích thước (Size):</label>
                        @if (Model.SanPhamChiTiets != null && Model.SanPhamChiTiets.Any())
                        {
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var item in Model.SanPhamChiTiets.OrderBy(x => x.MaSizeNavigation.TenSize))
                                {
                                    /* Chỉ hiện những size còn hàng */
                                    if (item.SoLuongTon > 0)
                                    {
                                        <input type="radio" class="btn-check" name="sizeId" id="size_@item.MaSize" value="@item.MaSize" autocomplete="off">
                                        <label class="btn btn-outline-secondary" for="size_@item.MaSize">
                                            @item.MaSizeNavigation.TenSize
                                        </label>
                                    }
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-danger">Tạm hết hàng</div>
                        }
                    </div>

                    <div class="mb-3 d-flex align-items-center">
                        <label class="form-label fw-bold me-3 mb-0">Số lượng:</label>
                        <input class="form-control text-center" id="inputQuantity" type="number" value="1" min="1" style="max-width: 3rem" />
                    </div>

                    <button class="btn btn-dark flex-shrink-0" type="button">
                        <i class="bi bi-cart-fill me-1"></i>
                        Thêm vào giỏ hàng
                    </button>
                </form>
            </div>

            <div class="mt-4">
                <small class="text-muted">Mã sản phẩm: #@Model.MaSp</small> <br />
                <small class="text-muted">Danh mục: @Model.MaLoaiNavigation?.TenLoai</small>
            </div>
        </div>
    </div>
</div>