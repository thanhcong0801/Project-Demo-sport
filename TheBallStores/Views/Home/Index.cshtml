@model IEnumerable<TheBallStores.Models.SanPham>
@{
    ViewData["Title"] = "Kicks Vortex";
    var accentColor = "rgba(102, 252, 241, 0.5)";
}

<style>
    @@keyframes float {
        0%, 100% {
            transform: translateY(0) rotate(-3deg);
        }

        50% {
            transform: translateY(-15px) rotate(3deg);
        }
    }

    .carousel-item img {
        transition: transform 0.5s ease-in-out;
    }

    .btn-neon {
        background: transparent;
        border: 2px solid var(--accent);
        color: var(--accent);
        font-family: var(--font-heading);
        padding: 15px 40px;
        font-weight: 700;
        text-transform: uppercase;
        transition: 0.4s;
        position: relative;
        overflow: hidden;
        box-shadow: 0 0 10px var(--accent-glow);
        text-decoration: none;
        display: inline-block;
    }

        .btn-neon:hover {
            background: var(--accent);
            color: var(--bg-deep);
            box-shadow: var(--glow);
        }
</style>

<div class="text-center py-5 hero-section" style="min-height: 80vh; display: flex; flex-direction: column; justify-content: center;">
    <div class="hero-glow" style="top: 10%; left: 10%;"></div>

    <h1 class="display-2 fw-bold text-white mb-3" style="text-shadow: 0 0 30px @accentColor; letter-spacing: 5px;">
        KICKS VORTEX
    </h1>
    <p class="lead text-muted mb-5 fs-4">ĐỊNH HÌNH PHONG CÁCH - KIẾN TẠO TƯƠNG LAI</p>

    <!-- Carousel (Hiển thị 4 sản phẩm ngẫu nhiên để làm cảnh) -->
    <div id="productCarousel" class="carousel slide mb-5 mx-auto" data-bs-ride="carousel" style="max-width: 600px;">
        <div class="carousel-inner">
            @{
                var sanPhams = Model?.ToList() ?? new List<TheBallStores.Models.SanPham>();
            }
            @for (int i = 0; i < sanPhams.Count; i++)
            {
                var item = sanPhams[i];
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="d-flex align-items-center justify-content-center" style="height: 350px;">
                        @if (!string.IsNullOrEmpty(item.AnhDaiDien))
                        {
                            <img src="~/images/products/@item.AnhDaiDien" class="d-block img-fluid" style="max-height: 100%; filter: drop-shadow(0 0 40px @accentColor); animation: float 6s ease-in-out infinite;" alt="@item.TenSp">
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Nút Khám Phá Ngay -->
    <div class="mt-4">
        @if (Context.Session.GetString("HoTen") != null)
        {
            <!-- Đã đăng nhập -> Vào trang Store -->
            <a asp-controller="Store" asp-action="Index" class="btn-neon fs-4">
                KHÁM PHÁ NGAY <i class="bi bi-arrow-right ms-2"></i>
            </a>
        }
        else
        {
            <!-- Chưa đăng nhập -> Vào trang Login -->
            <a asp-controller="Account" asp-action="Login" class="btn-neon fs-4">
                ĐĂNG NHẬP ĐỂ KHÁM PHÁ <i class="bi bi-box-arrow-in-right ms-2"></i>
            </a>
        }
    </div>
</div>