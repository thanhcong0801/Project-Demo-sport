@model TheBallStores.Models.LoaiSanPham

@{
    ViewData["Title"] = "Tạo Danh Mục Mới";
}

<h1 class="text-info mb-4 text-center">TẠO DANH MỤC SẢN PHẨM MỚI</h1>
<hr class="border-secondary mb-5" />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card-vortex p-4 shadow-lg">
            <h4 class="text-warning mb-3">Thông Tin Danh Mục</h4>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="TenLoai" class="control-label text-white fw-bold"></label>
                    <input asp-for="TenLoai" class="form-control form-control-vortex" placeholder="Ví dụ: Giày Bóng Rổ" />
                    <span asp-validation-for="TenLoai" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NhomLoai" class="control-label text-white fw-bold"></label>
                    <input asp-for="NhomLoai" class="form-control form-control-vortex" placeholder="Ví dụ: Giày (Tùy chọn)" />
                    <span asp-validation-for="NhomLoai" class="text-danger"></span>
                </div>

                <div class="form-group mt-4 d-flex gap-2">
                    <input type="submit" value="TẠO MỚI" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}