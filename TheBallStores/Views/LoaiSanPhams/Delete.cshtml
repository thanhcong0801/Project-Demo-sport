@model TheBallStores.Models.LoaiSanPham

@{
    ViewData["Title"] = "Xóa Danh Mục";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Warning Card -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white text-center py-4">
                    <div class="mb-2">
                        <i class="bi bi-exclamation-triangle-fill display-4"></i>
                    </div>
                    <h4 class="fw-bold text-uppercase mb-0">Xác Nhận Xóa</h4>
                    <p class="text-white-50 mb-0 small">Hành động này không thể hoàn tác!</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <h5 class="text-center text-dark mb-4">Bạn có chắc chắn muốn xóa danh mục này?</h5>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                            <i class="bi bi-x-circle-fill me-2 fs-4"></i>
                            <div>
                                <strong>Không thể xóa!</strong> @TempData["ErrorMessage"]
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning d-flex align-items-center mb-4 border-warning bg-warning-subtle text-warning-emphasis">
                            <i class="bi bi-info-circle-fill me-2 fs-4"></i>
                            <div>
                                Việc xóa danh mục có thể ảnh hưởng đến các sản phẩm thuộc danh mục này.
                            </div>
                        </div>
                    }

                    <div class="bg-light p-3 rounded-3 border border-light mb-4">
                        <dl class="row mb-0">
                            <dt class="col-sm-4 text-muted">Mã Loại:</dt>
                            <dd class="col-sm-8 fw-bold text-dark">#@Model.MaLoai</dd>

                            <dt class="col-sm-4 text-muted">Tên Loại:</dt>
                            <dd class="col-sm-8 fw-bold text-dark">@Model.TenLoai</dd>

                            <dt class="col-sm-4 text-muted">Nhóm Loại:</dt>
                            <dd class="col-sm-8">@(Model.NhomLoai ?? "Không có")</dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" class="d-grid gap-2">
                        <input type="hidden" asp-for="MaLoai" />
                        <button type="submit" class="btn btn-danger btn-lg fw-bold shadow-sm">
                            <i class="bi bi-trash-fill me-2"></i> XÓA VĨNH VIỄN
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Hủy bỏ</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>