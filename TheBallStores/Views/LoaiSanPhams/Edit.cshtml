@model TheBallStores.Models.LoaiSanPham

@{
    ViewData["Title"] = "Chỉnh Sửa Danh Mục";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Header -->
            <div class="text-center mb-4">
                <h2 class="fw-bold text-uppercase text-dark">Chỉnh Sửa Danh Mục</h2>
                <p class="text-muted small">Cập nhật thông tin danh mục #@Model.MaLoai</p>
            </div>

            <!-- Form Card -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-warning text-dark py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-pencil-square me-2"></i>Thông Tin Chỉnh Sửa</h5>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                        <input type="hidden" asp-for="MaLoai" />

                        <!-- Tên Loại -->
                        <div class="mb-4">
                            <label asp-for="TenLoai" class="form-label fw-bold text-dark">Tên Danh Mục <span class="text-danger">*</span></label>
                            <input asp-for="TenLoai" class="form-control form-control-lg rounded-3" placeholder="Ví dụ: Giày Bóng Rổ" />
                            <span asp-validation-for="TenLoai" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <!-- Nhóm Loại -->
                        <div class="mb-4">
                            <label asp-for="NhomLoai" class="form-label fw-bold text-dark">Nhóm Loại</label>
                            <input asp-for="NhomLoai" class="form-control rounded-3" placeholder="Ví dụ: Giày, Phụ kiện..." />
                            <div class="form-text text-muted">Nhóm loại giúp phân loại danh mục cha.</div>
                            <span asp-validation-for="NhomLoai" class="text-danger small"></span>
                        </div>

                        <!-- Actions -->
                        <div class="d-grid gap-2 mt-5">
                            <button type="submit" class="btn btn-warning btn-lg shadow-sm fw-bold text-uppercase">
                                <i class="bi bi-save me-2"></i> Lưu Thay Đổi
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}