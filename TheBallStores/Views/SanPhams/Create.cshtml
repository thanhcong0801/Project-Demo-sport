@model TheBallStores.Models.SanPham

@{
    ViewData["Title"] = "Thêm Sản Phẩm Mới";
}

<h1 class="text-info">THÊM SẢN PHẨM MỚI</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <!-- RẤT QUAN TRỌNG: enctype="multipart/form-data" -->
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- THÔNG TIN CƠ BẢN -->
            <fieldset class="border p-3 mb-4 rounded bg-dark-subtle">
                <legend class="float-none w-auto px-2 text-info">Thông tin cơ bản</legend>

                <div class="form-group mb-3">
                    <label asp-for="TenSp" class="control-label fw-bold"></label>
                    <input asp-for="TenSp" class="form-control" />
                    <span asp-validation-for="TenSp" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="GiaBan" class="control-label fw-bold"></label>
                    <input asp-for="GiaBan" class="form-control" />
                    <span asp-validation-for="GiaBan" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MoTa" class="control-label fw-bold"></label>
                    <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <!-- TẠO NHANH DANH MỤC (PHẦN ĐÃ SỬA) -->
                <div class="form-group mb-3">
                    <label asp-for="MaLoai" class="control-label fw-bold">Loại Sản Phẩm</label>
                    <div class="input-group">
                        <!-- Dropdown đã được gắn ID để JS có thể cập nhật -->
                        <select asp-for="MaLoai" id="MaLoaiDropdown" class="form-control" asp-items="ViewBag.MaLoai"></select>

                        <!-- Nút kích hoạt Modal -->
                        <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#AddCategoryModal">
                            + Thêm Nhanh
                        </button>
                    </div>
                    <span asp-validation-for="MaLoai" class="text-danger"></span>
                </div>
            </fieldset>

            <!-- CHỌN ẢNH ĐẠI DIỆN VÀ ẢNH PHỤ -->
            <fieldset class="border p-3 mb-4 rounded bg-dark-subtle">
                <legend class="float-none w-auto px-2 text-info">Quản lý Ảnh</legend>

                <div class="form-group mb-3">
                    <label for="HinhAnhDaiDienMoi" class="control-label fw-bold">Chọn Ảnh Đại Diện (Bắt buộc):</label>
                    <input type="file" id="HinhAnhDaiDienMoi" name="HinhAnhDaiDienMoi" class="form-control" accept="image/*" required />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="HinhAnhPhuMoi" class="control-label fw-bold">Chọn Ảnh Phụ (Tùy chọn):</label>
                    <input type="file" id="HinhAnhPhuMoi" name="HinhAnhPhuMoi" class="form-control" multiple accept="image/*" />
                    <small class="form-text text-muted">Có thể chọn nhiều ảnh cùng lúc.</small>
                </div>
            </fieldset>

            <!-- Nút Lưu -->
            <div class="form-group mt-4">
                <input type="submit" value="TẠO MỚI SẢN PHẨM" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
            </div>
        </form>
    </div>
</div>

<!-- MODAL TẠO NHANH DANH MỤC -->
<div class="modal fade" id="AddCategoryModal" tabindex="-1" aria-labelledby="AddCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AddCategoryModalLabel">Tạo Nhanh Danh Mục Mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="quickAddMessage" class="mb-3"></div>
                <form id="quickAddForm">
                    <!-- Thêm AntiForgeryToken vào form AJAX -->
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label for="TenLoaiInput" class="col-form-label">Tên Loại Sản Phẩm:</label>
                        <input type="text" class="form-control" id="TenLoaiInput" name="TenLoai" required>
                    </div>
                    <div class="mb-3">
                        <label for="NhomLoaiInput" class="col-form-label">Nhóm Loại (Tùy chọn):</label>
                        <input type="text" class="form-control" id="NhomLoaiInput" name="NhomLoai">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="saveQuickCategory">Lưu Danh Mục</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- FIX LỖI: Bổ sung tham chiếu trực tiếp đến jQuery CDN để đảm bảo thư viện được tải trước khi chạy mã JS tùy chỉnh -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        // SỬA LỖI: Sử dụng $(function() { ... }); để đảm bảo jQuery đã được tải trước khi chạy code
        $(function () {
            // Lắng nghe sự kiện click nút Lưu Danh Mục trong Modal
            $('#saveQuickCategory').click(function (e) {
                e.preventDefault(); // Ngăn chặn submit form truyền thống

                var tenLoai = $('#TenLoaiInput').val();
                var nhomLoai = $('#NhomLoaiInput').val();
                var messageDiv = $('#quickAddMessage');

                messageDiv.empty(); // Xóa thông báo cũ

                if (tenLoai.trim() === '') {
                    messageDiv.html('<div class="alert alert-danger">Tên loại không được để trống.</div>');
                    return;
                }

                // Lấy AntiForgeryToken từ form ẩn
                var token = $('input[name="__RequestVerificationToken"]').val();

                // Thực hiện gọi AJAX POST
                $.ajax({
                    url: '@Url.Action("CreateAjax", "LoaiSanPhams")', // Gọi Action AJAX đã sửa
                    type: 'POST',
                    headers: {
                        "RequestVerificationToken": token
                    },
                    data: {
                        TenLoai: tenLoai,
                        NhomLoai: nhomLoai
                    },
                    success: function (response) {
                        if (response.success) {

                            // 1. Cập nhật thông báo
                            messageDiv.html('<div class="alert alert-success">Đã thêm danh mục thành công!</div>');

                            // 2. Tải lại danh sách dropdown bằng AJAX
                            $.get('@Url.Action("GetLoaiSanPhams", "LoaiSanPhams")', function(data) {
                                var dropdown = $('#MaLoaiDropdown');
                                dropdown.empty();

                                $.each(data, function (i, item) {
                                    // data trả về là {value: MaLoai, text: TenLoai}
                                    dropdown.append($('<option>', {
                                        value: item.value,
                                        text: item.text
                                    }));
                                });

                                // 3. Chọn danh mục vừa tạo
                                dropdown.val(response.maLoai);
                            });

                            // 4. Đặt lại form và đóng modal
                            $('#TenLoaiInput').val('');
                            $('#NhomLoaiInput').val('');
                            setTimeout(function() {
                                // Sử dụng Bootstrap JS để đóng modal
                                var modalElement = document.getElementById('AddCategoryModal');
                                // Khởi tạo Modal instance nếu chưa có
                                var modal = bootstrap.Modal.getInstance(modalElement) || new bootstrap.Modal(modalElement);
                                modal.hide();
                                messageDiv.empty();
                            }, 1000);
                        } else {
                            // Lỗi server (ví dụ: DB error hoặc validation)
                            messageDiv.html('<div class="alert alert-danger">Lỗi: ' + (response.message || 'Không rõ lỗi server.') + '</div>');
                        }
                    },
                    error: function (xhr, status, error) {
                         messageDiv.html('<div class="alert alert-danger">Lỗi kết nối server: ' + error + '</div>');
                    }
                });
            });
        });
    </script>
}