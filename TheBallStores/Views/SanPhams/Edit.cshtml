@model TheBallStores.Models.SanPham

@{
    ViewData["Title"] = "Chỉnh Sửa Sản Phẩm";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-uppercase text-dark mb-0">Chỉnh Sửa Sản Phẩm</h2>
            <p class="text-muted small mb-0">Cập nhật thông tin chi tiết sản phẩm #@Model.MaSp</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Quay lại
        </a>
    </div>

    <!-- Main Form -->
    <form asp-action="Edit" enctype="multipart/form-data" method="post">
        <input type="hidden" asp-for="MaSp" />
        <input type="hidden" asp-for="AnhDaiDien" />

        <div class="row g-4">
            <!-- CỘT TRÁI: THÔNG TIN CƠ BẢN -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4 mb-4">
                    <div class="card-header bg-white border-0 pt-4 px-4 pb-0">
                        <h5 class="fw-bold text-primary mb-0">
                            <i class="bi bi-pencil-square me-2"></i>Thông Tin Cơ Bản
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                        <div class="mb-3">
                            <label asp-for="TenSp" class="form-label fw-bold">Tên Sản Phẩm <span class="text-danger">*</span></label>
                            <input asp-for="TenSp" class="form-control form-control-lg" placeholder="Nhập tên sản phẩm" />
                            <span asp-validation-for="TenSp" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="GiaBan" class="form-label fw-bold">Giá Bán (VNĐ) <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <input asp-for="GiaBan" class="form-control" placeholder="0" />
                                    <span class="input-group-text">₫</span>
                                </div>
                                <span asp-validation-for="GiaBan" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="MaLoai" class="form-label fw-bold">Danh Mục</label>
                                <select asp-for="MaLoai" class="form-select" asp-items="ViewBag.MaLoai">
                                    <option value="">-- Chọn Danh Mục --</option>
                                </select>
                                <span asp-validation-for="MaLoai" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-0">
                            <label asp-for="MoTa" class="form-label fw-bold">Mô Tả Chi Tiết</label>
                            <textarea asp-for="MoTa" class="form-control" rows="5" placeholder="Mô tả sản phẩm..."></textarea>
                            <span asp-validation-for="MoTa" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Submit Button Area (Mobile) -->
                <div class="d-lg-none d-grid gap-2 mb-4">
                    <button type="submit" class="btn btn-warning btn-lg fw-bold text-uppercase shadow-sm">
                        <i class="bi bi-save me-2"></i> Lưu Thay Đổi
                    </button>
                </div>
            </div>

            <!-- CỘT PHẢI: QUẢN LÝ ẢNH -->
            <div class="col-lg-4">
                <!-- 1. Ảnh Đại Diện -->
                <div class="card border-0 shadow-sm rounded-4 mb-4">
                    <div class="card-header bg-white border-0 pt-4 px-4 pb-0">
                        <h5 class="fw-bold text-success mb-0">
                            <i class="bi bi-image me-2"></i>Ảnh Đại Diện
                        </h5>
                    </div>
                    <div class="card-body p-4 text-center">
                        <div class="mb-3 position-relative d-inline-block">
                            <img src="~/images/products/@Model.AnhDaiDien"
                                 alt="Current Image"
                                 class="img-fluid rounded border shadow-sm"
                                 style="max-height: 200px; object-fit: contain;"
                                 onerror="this.src='/images/no-image.png'" />
                            <span class="position-absolute bottom-0 start-50 translate-middle-x badge bg-dark opacity-75 mb-2">Hiện tại</span>
                        </div>

                        <div class="text-start">
                            <label for="HinhAnhDaiDienMoi" class="form-label fw-bold small text-uppercase text-muted">Thay đổi ảnh mới:</label>
                            <input type="file" id="HinhAnhDaiDienMoi" name="HinhAnhDaiDienMoi" class="form-control form-control-sm" accept="image/*" />
                        </div>
                    </div>
                </div>

                <!-- 2. Ảnh Phụ -->
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-header bg-white border-0 pt-4 px-4 pb-0">
                        <h5 class="fw-bold text-info mb-0">
                            <i class="bi bi-images me-2"></i>Ảnh Phụ
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <!-- List ảnh cũ -->
                        <label class="form-label fw-bold small text-muted mb-2">ẢNH HIỆN CÓ (Click để xóa):</label>
                        <div id="existing-images" class="d-grid grid-cols-3 gap-2 mb-3">
                            @if (Model.HinhAnhSanPhams != null && Model.HinhAnhSanPhams.Any())
                            {
                                @foreach (var img in Model.HinhAnhSanPhams)
                                {
                                    <div class="image-wrapper position-relative rounded overflow-hidden border"
                                         data-path="@img.DuongDanAnh"
                                         style="aspect-ratio: 1; cursor: pointer;">
                                        <img src="~/images/products/@img.DuongDanAnh"
                                             class="w-100 h-100 object-fit-cover"
                                             onerror="this.src='/images/no-image.png'" />
                                        <div class="overlay d-flex align-items-center justify-content-center">
                                            <i class="bi bi-trash-fill text-white fs-4"></i>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-3 bg-light rounded text-muted small col-span-3">
                                    Chưa có ảnh phụ
                                </div>
                            }
                        </div>

                        <!-- Upload mới -->
                        <div class="mt-3">
                            <label for="HinhAnhPhuMoi" class="form-label fw-bold small text-muted">THÊM ẢNH MỚI:</label>
                            <input type="file" id="HinhAnhPhuMoi" name="HinhAnhPhuMoi" class="form-control form-control-sm" multiple accept="image/*" />
                            <div class="form-text small"><i class="bi bi-info-circle me-1"></i>Giữ Ctrl để chọn nhiều ảnh</div>
                        </div>
                    </div>
                </div>

                <!-- Submit Button Area (Desktop) -->
                <div class="d-none d-lg-block mt-4">
                    <button type="submit" class="btn btn-warning btn-lg w-100 fw-bold text-uppercase shadow-sm py-3">
                        <i class="bi bi-save me-2"></i> Lưu Thay Đổi
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Logic xóa ảnh: Click vào ảnh để toggle trạng thái xóa
            $('#existing-images .image-wrapper').on('click', function () {
                var $wrapper = $(this);
                var path = $wrapper.data('path');
                var inputName = 'DeleteImagePaths'; // Tên tham số nhận trong Controller

                if ($wrapper.hasClass('selected-for-delete')) {
                    // Bỏ chọn xóa
                    $wrapper.removeClass('selected-for-delete');
                    // Tìm và xóa input hidden tương ứng
                    $('input[type="hidden"][name="' + inputName + '"][value="' + path + '"]').remove();
                } else {
                    // Chọn xóa
                    $wrapper.addClass('selected-for-delete');
                    // Tạo input hidden để gửi về server
                    $('<input>').attr({
                        type: 'hidden',
                        name: inputName, // Controller sẽ nhận List<string> DeleteImagePaths
                        value: path
                    }).appendTo('form');
                }
            });
        });
    </script>

    <style>
        /* Grid 3 cột cho ảnh nhỏ */
        .grid-cols-3 {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
        }

        .col-span-3 {
            grid-column: span 3;
        }

        /* Hiệu ứng chọn xóa ảnh */
        .image-wrapper {
            transition: all 0.2s ease;
        }

            .image-wrapper:hover {
                border-color: var(--bs-danger) !important;
            }

            .image-wrapper .overlay {
                position: absolute;
                inset: 0;
                background: rgba(220, 53, 69, 0.7); /* Màu đỏ */
                opacity: 0;
                transition: opacity 0.2s;
            }

            .image-wrapper.selected-for-delete .overlay {
                opacity: 1; /* Hiện lớp phủ đỏ khi đã chọn xóa */
            }

            .image-wrapper.selected-for-delete {
                border: 2px solid var(--bs-danger) !important;
            }
    </style>
}