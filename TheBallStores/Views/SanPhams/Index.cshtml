@model IEnumerable<TheBallStores.Models.SanPham>

@{
    ViewData["Title"] = "Quản lý Sản phẩm";
    var productCount = Model.Count();
}

<h1 class="text-info mb-4">QUẢN LÝ SẨN PHẨM (@productCount)</h1>
<hr class="border-secondary" />

<p class="mb-4">
    <a asp-action="Create" class="btn btn-vortex">
        <i class="bi bi-plus-circle me-2"></i> THÊM SẢN PHẨM MỚI
    </a>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary text-white ms-2">
        <i class="bi bi-arrow-left"></i> Về Dashboard
    </a>
</p>

<div class="card-vortex p-4">
    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>Mã SP</th>
                <th>Ảnh</th>
                <th>Tên Sản Phẩm</th>
                <th>Giá Bán (VNĐ)</th>
                <th>Loại</th>
                <th>Mô tả</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-muted">@item.MaSp</td>
                    <td style="width: 100px;">
                        @if (!string.IsNullOrEmpty(item.AnhDaiDien))
                        {
                            <img src="~/images/products/@item.AnhDaiDien" alt="@item.TenSp" style="width: 60px; height: 60px; object-fit: contain; background: #333; border-radius: 5px;">
                        }
                    </td>
                    <td>@item.TenSp</td>
                    <td class="text-info fw-bold">@item.GiaBan.ToString("#,##0")</td>
                    <td>@item.MaLoaiNavigation?.TenLoai</td>
                    <td class="text-muted" style="max-width: 250px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                        @item.MoTa
                    </td>
                    <td>
                        <!-- Nút Sửa -->
                        <a asp-action="Edit" asp-route-id="@item.MaSp" class="btn btn-sm btn-primary">Sửa</a>
                        <!-- Nút Quản lý Kho -->
                        <a asp-action="NhapKho" asp-route-id="@item.MaSp" class="btn btn-sm btn-warning">Kho Size</a>
                        <!-- Nút Xóa -->
                        <a asp-action="Delete" asp-route-id="@item.MaSp" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>