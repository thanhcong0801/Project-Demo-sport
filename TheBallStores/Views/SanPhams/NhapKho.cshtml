@model TheBallStores.Models.SanPham
@{
    ViewData["Title"] = "Nhập Kho - " + Model.TenSp;
    // Lấy danh sách size từ Controller
    var availableSizes = ViewBag.AvailableSizes as List<TheBallStores.Models.KichThuoc>;
}

<h1 class="text-info">QUẢN LÝ TỒN KHO</h1>
<h3 class="text-white">@Model.TenSp (Mã: @Model.MaSp)</h3>
<p class="text-muted">Nhập/cập nhật size và số lượng tồn kho cho sản phẩm này.</p>

<!-- Quay lại danh sách sản phẩm -->
<div class="mb-4">
    <a asp-action="Index" class="btn btn-secondary btn-sm">Quay lại Danh sách</a>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-2">@TempData["SuccessMessage"]</div>
    }
</div>

<div class="row">
    <!-- Cột TRÁI: Form nhập mới -->
    <div class="col-md-5">
        <div class="card-vortex p-4">
            <h4 class="text-warning">Cập nhật/Thêm Size</h4>
            <form asp-action="NhapKho" method="post">
                <input type="hidden" name="MaSp" value="@Model.MaSp" />

                <!-- Chọn Size -->
                <div class="mb-3">
                    <label class="form-label">Kích thước (Size)</label>
                    <select name="MaSize" class="form-control form-control-vortex" required>
                        <option value="">-- Chọn Size --</option>
                        @foreach (var size in availableSizes)
                        {
                            <option value="@size.MaSize">@size.TenSize</option>
                        }
                    </select>
                </div>

                <!-- Nhập Số lượng -->
                <div class="mb-3">
                    <label class="form-label">Số lượng tồn kho</label>
                    <input type="number" name="SoLuongTon" class="form-control form-control-vortex" min="0" value="0" required />
                </div>

                <button type="submit" class="btn btn-vortex">Lưu Tồn Kho</button>
            </form>
        </div>
    </div>

    <!-- Cột PHẢI: Danh sách kho hiện tại -->
    <div class="col-md-7">
        <h4 class="text-info">Tồn kho hiện tại</h4>
        @if (Model.SanPhamChiTiets == null || !Model.SanPhamChiTiets.Any())
        {
            <div class="alert alert-secondary bg-transparent text-muted">Chưa có thông tin tồn kho nào được nhập.</div>
        }
        else
        {
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Size</th>
                        <th>Số lượng</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var chiTiet in Model.SanPhamChiTiets)
                    {
                        <tr>
                            <td>@chiTiet.MaSizeNavigation?.TenSize</td>
                            <td><span class="fw-bold">@chiTiet.SoLuongTon</span></td>
                            <td>
                                <!-- Nút Xóa (Tùy chọn: cần thêm hàm Delete) -->
                                <a asp-action="NhapKho" asp-route-id="@Model.MaSp" class="btn btn-sm btn-danger disabled">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>