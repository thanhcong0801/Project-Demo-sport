<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Ball Stores</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;800&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light navbar-custom fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-dribbble me-2"></i>THE BALL STORES
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Store" asp-action="Index">Cửa Hàng</a>
                        </li>
                        <!-- Thêm menu Loại sản phẩm động ở đây nếu muốn -->
                    </ul>

                    <ul class="navbar-nav">
                        <!-- Tìm kiếm -->
                        <li class="nav-item me-3">
                            <form asp-controller="Store" asp-action="Index" method="get" class="d-flex">
                                <div class="input-group">
                                    <input type="text" name="searchString" class="form-control form-control-sm border-end-0 rounded-start-pill" placeholder="Tìm kiếm...">
                                    <button class="btn btn-outline-secondary btn-sm border-start-0 rounded-end-pill" type="submit">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>
                            </form>
                        </li>

                        <!-- Giỏ hàng -->
                        <li class="nav-item me-3">
                            <a class="nav-link position-relative" asp-controller="GioHang" asp-action="Index">
                                <i class="bi bi-bag fs-5"></i>
                                @await Component.InvokeAsync("CartBadge")
                            </a>
                        </li>

                        <!-- Tài khoản -->
                        @if (Context.Session.GetString("HoTen") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    Xin chào, <strong>@Context.Session.GetString("HoTen")</strong>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                    <li><a class="dropdown-item" asp-controller="DonHangs" asp-action="LichSuGiaoDich"><i class="bi bi-clock-history me-2"></i>Lịch sử đơn hàng</a></li>
                                    @if (Context.Session.GetString("VaiTro") == "Admin")
                                    {
                                        <li><a class="dropdown-item text-danger" asp-controller="Admin" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Trang Quản Trị</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-sport btn-sm ms-2" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Content -->
    <div style="margin-top: 80px;">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase fw-bold mb-3">The Ball Stores</h5>
                    <p class="text-muted">Chuyên cung cấp giày đá bóng, phụ kiện thể thao chính hãng chất lượng cao. Đồng hành cùng đam mê của bạn.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase fw-bold mb-3">Liên kết nhanh</h5>
                    <a href="/" class="footer-link">Trang chủ</a>
                    <a href="/Store" class="footer-link">Sản phẩm</a>
                    <a href="#" class="footer-link">Chính sách bảo hành</a>
                    <a href="#" class="footer-link">Liên hệ</a>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase fw-bold mb-3">Liên hệ</h5>
                    <p><i class="bi bi-geo-alt me-2"></i> 123 Đường Số 1, TP.HCM</p>
                    <p><i class="bi bi-envelope me-2"></i> contact@theballstores.com</p>
                    <p><i class="bi bi-phone me-2"></i> 0909 000 111</p>
                </div>
            </div>
            <div class="text-center pt-4 border-top border-secondary mt-3">
                <small>&copy; 2024 The Ball Stores. All Rights Reserved.</small>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>