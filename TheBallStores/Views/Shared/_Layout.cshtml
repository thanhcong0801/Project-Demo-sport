<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kicks Vortex</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/kicks.css" /> <!-- Style mới -->
    <link rel="stylesheet" href="[https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css](https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css)">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark navbar-vortex fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">KICKS VORTEX</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">TRANG CHỦ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">SẢN PHẨM</a>
                        </li>
                    </ul>

                    <!-- Login/Register/Logout Section -->
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("HoTen") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-warning">Xin chào, @Context.Session.GetString("HoTen")</span>
                            </li>
                            if (Context.Session.GetString("VaiTro") == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-danger fw-bold" asp-controller="Admin" asp-action="Index">QUẢN TRỊ</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">ĐĂNG XUẤT</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">ĐĂNG KÝ</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-vortex btn-sm ms-2" asp-controller="Account" asp-action="Login">ĐĂNG NHẬP</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 100px; min-height: 80vh;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top border-secondary footer text-muted text-center py-4 mt-5">
        <div class="container">
            &copy; 2025 - Kicks Vortex - Future of Football
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>