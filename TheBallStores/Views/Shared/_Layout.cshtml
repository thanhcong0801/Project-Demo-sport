<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kicks Vortex</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/kicks.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Nền sao (Hiệu ứng) -->
    <div class="stars-container" id="starContainer"></div>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-vortex fixed-top">
            <div class="container-fluid px-4">

                <!-- 1. LOGO BÊN TRÁI -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">KICKS VORTEX</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">

                    <!-- 2. MENU CHÍNH (Ở GIỮA) -->
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">TRANG CHỦ</a>
                        </li>
                        <li class="nav-item">
                            <!-- Link SẢN PHẨM: Kiểm tra đăng nhập -->
                            @if (Context.Session.GetString("HoTen") != null)
                            {
                                <a class="nav-link" asp-controller="Store" asp-action="Index">SẢN PHẨM</a>
                            }
                            else
                            {
                                <a class="nav-link" asp-controller="Account" asp-action="Login">SẢN PHẨM</a>
                            }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">TIN TỨC</a>
                        </li>
                        <!-- === LIÊN KẾT LỊCH SỬ GIAO DỊCH (MỚI) === -->
                        @if (Context.Session.GetString("HoTen") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="DonHangs" asp-action="LichSuGiaoDich">
                                    <i class="bi bi-clock-history me-1"></i> LỊCH SỬ GIAO DỊCH
                                </a>
                            </li>
                        }
                        <!-- ======================================= -->
                    </ul>

                    <!-- 3. GIỎ HÀNG VÀ AUTH (BÊN PHẢI) -->
                    <ul class="navbar-nav ms-auto d-flex align-items-center">

                        <!-- GIỎ HÀNG -->
                        <li class="nav-item me-4 position-relative">
                            <a class="nav-link" asp-controller="GioHang" asp-action="Index">
                                <i class="bi bi-bag-fill fs-5 text-white"></i>
                                <!-- Badge số lượng -->
                                @await Component.InvokeAsync("CartBadge")
                            </a>
                        </li>

                        <!-- AUTH & ADMIN -->
                        @if (Context.Session.GetString("HoTen") != null)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="nav-link text-warning me-3">Xin chào, @Context.Session.GetString("HoTen")</span>

                                @if (Context.Session.GetString("VaiTro") == "Admin")
                                {
                                    <a class="btn btn-sm btn-outline-danger me-2 fw-bold" asp-controller="Admin" asp-action="Index">QUẢN TRỊ</a>
                                }

                                <a class="btn btn-sm btn-outline-light" asp-controller="Account" asp-action="Logout">ĐĂNG XUẤT</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link me-2" asp-controller="Account" asp-action="Register">ĐĂNG KÝ</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-vortex btn-sm px-4" asp-controller="Account" asp-action="Login">ĐĂNG NHẬP</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTAINER CHÍNH -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="footer">
        <div class="footer-container">

            <!-- CỘT 1 -->
            <div class="footer-col">
                <h3>KICKS VORTEX - FUTURE OF FOOTBALL</h3>
                <p>Kicks Vortex định hướng trở thành hệ thống bán lẻ giày bóng đá công nghệ cao hàng đầu Vũ trụ.</p>
                <p>
                    <i class="bi bi-geo-alt-fill me-2"></i> Showroom: 123 Đường Ngân Hà, TP. HCM<br>
                    <i class="bi bi-telephone-fill me-2"></i> Hotline: 1900-VORTEX
                </p>
            </div>
            <!-- CỘT 2 -->
            <div class="footer-col">
                <h3>VỀ CHÚNG TÔI</h3>
                <ul>
                    <li><a href="#">Giới thiệu</a></li>
                    <li><a href="#">Chính sách bảo mật</a></li>
                    <li><a href="#">Tin tức</a></li>
                    <li><a href="#">Liên hệ</a></li>
                </ul>
            </div>
            <!-- CỘT 3 -->
            <div class="footer-col">
                <h3>HỖ TRỢ KHÁCH HÀNG</h3>
                <ul>
                    <li><a href="#">Hướng dẫn mua hàng</a></li>
                    <li><a href="#">Chính sách đổi trả</a></li>
                    <li><a href="#">Khách hàng thân thiết</a></li>
                    <li><a href="#">Hướng dẫn chọn size</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Kicks Vortex. All rights reserved.</p>
            <div class="social-icons">
                <a href="#"><i class="bi bi-facebook"></i></a>
                <a href="#"><i class="bi bi-youtube"></i></a>
                <a href="#"><i class="bi bi-tiktok"></i></a>
                <a href="#"><i class="bi bi-instagram"></i></a>
            </div>
        </div>
    </footer>

    <!-- SCRIPT CHUNG -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Script tạo sao nền (nếu chưa có trong kicks.js)
        document.addEventListener("DOMContentLoaded", function() {
            const container = document.getElementById('starContainer');
            if(container) {
                for (let i = 0; i < 100; i++) {
                    let star = document.createElement('div');
                    star.className = 'star';
                    let duration = Math.random() * (3 - 1) + 1;
                    let size = Math.random() * (2 - 0.5) + 0.5; // Kích thước sao nhỏ hơn

                    star.style.left = Math.random() * 100 + '%';
                    star.style.top = Math.random() * 100 + '%';
                    star.style.width = size + 'px';
                    star.style.height = size + 'px';
                    star.style.animationDuration = duration + 's';

                    container.appendChild(star);
                }
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>