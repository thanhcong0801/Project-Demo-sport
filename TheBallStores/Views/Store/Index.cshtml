@model IEnumerable<TheBallStores.Models.SanPham>
@{
    ViewData["Title"] = "Cửa Hàng";
    var cacLoai = ViewBag.CacLoai as List<TheBallStores.Models.LoaiSanPham>;
    int? maLoaiHienTai = ViewBag.MaLoaiHienTai;
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <h1 class="fw-bold">CỬA HÀNG</h1>
        <p class="lead">Khám phá những sản phẩm thể thao chất lượng nhất</p>
    </div>
</div>

<div class="container pb-5">
    <div class="row">
        <!-- Sidebar Filter -->
        <div class="col-lg-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white fw-bold py-3">
                    <i class="bi bi-funnel me-2"></i> BỘ LỌC TÌM KIẾM
                </div>
                <div class="card-body">
                    <h6 class="fw-bold mt-2 mb-3">Danh Mục</h6>
                    <div class="list-group list-group-flush">
                        <a href="/Store" class="list-group-item list-group-item-action border-0 @(maLoaiHienTai == null ? "active bg-light text-primary fw-bold" : "")">
                            Tất cả sản phẩm
                        </a>
                        @if (cacLoai != null)
                        {
                            foreach (var loai in cacLoai)
                            {
                                <a href="/Store?maLoai=@loai.MaLoai" class="list-group-item list-group-item-action border-0 @(maLoaiHienTai == loai.MaLoai ? "active bg-light text-primary fw-bold" : "")">
                                    @loai.TenLoai
                                </a>
                            }
                        }
                    </div>

                    <h6 class="fw-bold mt-4 mb-3">Tìm Kiếm</h6>
                    <form action="/Store" method="get">
                        <div class="input-group mb-3">
                            <input type="text" name="searchString" class="form-control" placeholder="Tên sản phẩm..." value="@ViewBag.SearchString">
                            <button class="btn btn-dark" type="submit"><i class="bi bi-search"></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Product Grid -->
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <span class="text-muted">Hiển thị <strong>@Model.Count()</strong> sản phẩm</span>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        Sắp xếp
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Mới nhất</a></li>
                        <li><a class="dropdown-item" href="#">Giá thấp đến cao</a></li>
                        <li><a class="dropdown-item" href="#">Giá cao đến thấp</a></li>
                    </ul>
                </div>
            </div>

            <div class="row row-cols-2 row-cols-md-3 g-4">
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <div class="col">
                            <div class="product-card h-100 shadow-sm">
                                <a href="/Store/Details/@item.MaSp" class="text-decoration-none text-dark">
                                    <div class="product-img-wrapper">
                                        <img src="~/images/products/@(string.IsNullOrEmpty(item.AnhDaiDien) ? "no-image.png" : item.AnhDaiDien)"
                                             class="product-img" alt="@item.TenSp"
                                             onerror="this.src='/images/no-image.png'">
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title text-truncate" title="@item.TenSp">@item.TenSp</h5>
                                        <div class="d-flex justify-content-between align-items-center mt-2">
                                            <span class="price">@item.GiaBan.ToString("#,##0") đ</span>
                                            <span class="btn btn-sm btn-light rounded-circle"><i class="bi bi-bag-plus"></i></span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-5">
                        <img src="https://cdn-icons-png.flaticon.com/512/4076/4076432.png" width="100" class="mb-3 opacity-50">
                        <p class="text-muted">Không tìm thấy sản phẩm nào phù hợp.</p>
                        <a href="/Store" class="btn btn-outline-dark btn-sm">Xem tất cả</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>