@model IEnumerable<TheBallStores.Models.KhachHang>
@{
    ViewData["Title"] = "Quản lý Tài khoản";
    var totalUsers = Model.Count();
    var adminCount = Model.Count(u => u.VaiTro == "Admin");
    var customerCount = Model.Count(u => u.VaiTro == "Customer");
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-uppercase text-dark mb-0">Quản Lý Tài Khoản </h2>
            <div class="text-muted small mt-1">
                Tổng: <span class="fw-bold text-primary">@totalUsers</span>
                ( <span class="text-danger fw-bold">@adminCount</span> Admin | <span class="text-success fw-bold">@customerCount</span> Khách )
            </div>
        </div>
        <div>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left me-1"></i> Dashboard
            </a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary fw-bold shadow-sm">
                <i class="bi bi-person-plus-fill me-1"></i> Thêm Tài Khoản
            </a>
        </div>
    </div>

    <!-- Table Card -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary text-uppercase small fw-bold">
                        <tr>
                            <th class="ps-4 py-3" style="width: 5%;">ID</th>
                            <th class="py-3" style="width: 20%;">Họ Tên</th>
                            <th class="py-3" style="width: 25%;">Email / Liên hệ</th>
                            <th class="py-3" style="width: 15%;">Vai Trò</th>
                            <th class="py-3" style="width: 20%;">Địa Chỉ</th>
                            <th class="py-3 text-end pe-4" style="width: 15%;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-muted fw-bold">@item.MaKh</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle p-2 me-3 text-secondary">
                                            <i class="bi bi-person-fill fs-5"></i>
                                        </div>
                                        <span class="fw-bold text-dark">@item.HoTen</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@item.Email</div>
                                    <small class="text-muted"><i class="bi bi-telephone me-1"></i> @(item.DienThoai ?? "---")</small>
                                </td>
                                <td>
                                    @if (item.VaiTro == "Admin")
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger border border-danger px-3 py-2">
                                            <i class="bi bi-shield-lock-fill me-1"></i> ADMIN
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info bg-opacity-10 text-info border border-info px-3 py-2">
                                            <i class="bi bi-person me-1"></i> Khách hàng
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="text-muted small text-truncate" style="max-width: 200px;" title="@item.DiaChi">
                                        @(string.IsNullOrEmpty(item.DiaChi) ? "Chưa cập nhật" : item.DiaChi)
                                    </div>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-outline-primary" title="Chỉnh sửa (Chưa cài đặt)">
                                            <i class="bi bi-pencil-square"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" title="Xóa (Chưa cài đặt)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <p class="text-muted mb-0">Chưa có tài khoản nào.</p>
                </div>
            }
        </div>
    </div>
</div>