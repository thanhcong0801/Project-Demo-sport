@model TheBallStores.Models.Voucher

@{
    ViewData["Title"] = "Xóa Voucher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Warning Card -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white text-center py-4">
                    <div class="mb-2">
                        <i class="bi bi-exclamation-triangle-fill display-4"></i>
                    </div>
                    <h4 class="fw-bold text-uppercase mb-0">Xác Nhận Xóa</h4>
                    <p class="text-white-50 mb-0 small">Hành động này không thể hoàn tác!</p>
                </div>

                <div class="card-body p-4 p-md-5">
                    <h5 class="text-center text-dark mb-4">Bạn có chắc chắn muốn xóa mã giảm giá này?</h5>

                    <div class="bg-light p-3 rounded-3 border border-light mb-4">
                        <dl class="row mb-0">
                            <dt class="col-sm-4 text-muted">Mã Voucher:</dt>
                            <dd class="col-sm-8 fw-bold text-dark font-monospace text-uppercase">@Model.MaVoucher</dd>

                            <dt class="col-sm-4 text-muted">Chương trình:</dt>
                            <dd class="col-sm-8 text-dark">@Model.TenChuongTrinh</dd>

                            <dt class="col-sm-4 text-muted">Mức giảm:</dt>
                            <dd class="col-sm-8 fw-bold text-success">
                                @(Model.LoaiGiamGia == 1 ? Model.GiaTriGiam.ToString("0") + "%" : Model.GiaTriGiam.ToString("#,##0") + " đ")
                            </dd>

                            <dt class="col-sm-4 text-muted">Còn lại:</dt>
                            <dd class="col-sm-8">@Model.SoLuongConLai lượt</dd>

                            <dt class="col-sm-4 text-muted">Thời hạn:</dt>
                            <dd class="col-sm-8 small">
                                @Model.NgayBatDau.ToString("dd/MM/yy") - @Model.NgayKetThuc.ToString("dd/MM/yy")
                            </dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" class="d-grid gap-2">
                        <input type="hidden" asp-for="MaVoucher" />
                        <button type="submit" class="btn btn-danger btn-lg fw-bold shadow-sm text-uppercase">
                            <i class="bi bi-trash-fill me-2"></i> XÓA VĨNH VIỄN
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Hủy bỏ</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>