@model TheBallStores.Models.Voucher

@{
    ViewData["Title"] = "Xóa Voucher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 bg-light">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Header -->
            <div class="text-center mb-4">
                <h2 class="fw-bold text-dark mb-1">Xóa Voucher</h2>
                <p class="text-muted">Hành động này sẽ xóa vĩnh viễn mã giảm giá khỏi hệ thống.</p>
            </div>

            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-5 text-center">
                    <!-- Icon Warning -->
                    <div class="mb-4">
                        <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="fa fa-trash-o fa-3x"></i>
                        </div>
                    </div>

                    <h4 class="fw-bold text-dark mb-3">Xác nhận xóa voucher?</h4>
                    <p class="text-muted mb-4">
                        Bạn đang chuẩn bị xóa voucher <span class="fw-bold text-danger">@Model.MaVoucher</span>. <br />
                        Vui lòng kiểm tra lại thông tin bên dưới trước khi xác nhận.
                    </p>

                    <!-- Info Box -->
                    <div class="bg-light rounded-3 p-4 mb-4 text-start">
                        <div class="d-flex justify-content-between mb-2 border-bottom pb-2 border-white">
                            <span class="text-muted small text-uppercase fw-bold">Chương trình</span>
                            <span class="fw-bold text-dark">@Html.DisplayFor(model => model.TenChuongTrinh)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2 border-bottom pb-2 border-white">
                            <span class="text-muted small text-uppercase fw-bold">Giá trị giảm</span>
                            <span class="fw-bold text-success">
                                @(Model.LoaiGiamGia == 1 ? Model.GiaTriGiam.ToString("0") + "%" : Model.GiaTriGiam.ToString("#,##0") + " đ")
                            </span>
                        </div>
                        <div class="d-flex justify-content-between mb-2 border-bottom pb-2 border-white">
                            <span class="text-muted small text-uppercase fw-bold">Còn lại</span>
                            <span class="fw-bold text-dark">@Html.DisplayFor(model => model.SoLuongConLai)</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted small text-uppercase fw-bold">Thời hạn</span>
                            <span class="text-dark">
                                @Model.NgayBatDau.ToString("dd/MM/yy") - @Model.NgayKetThuc.ToString("dd/MM/yy")
                            </span>
                        </div>
                    </div>

                    <!-- Action Form -->
                    <form asp-action="Delete" class="d-grid gap-2">
                        <input type="hidden" asp-for="MaVoucher" />
                        <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow-sm fw-bold hover-scale">
                            <i class="fa fa-trash me-2"></i> Xác Nhận Xóa
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill border-0 fw-bold mt-2">
                            Hủy Bỏ
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s;
    }

        .hover-scale:hover {
            transform: scale(1.02);
        }
</style>