@model IEnumerable<TheBallStores.Models.Voucher>

@{
    ViewData["Title"] = "Quản lý Mã Giảm Giá";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-uppercase text-dark mb-0">Quản Lý Mã Giảm Giá</h2>
            <p class="text-muted small mb-0">Các chương trình khuyến mãi và voucher kích cầu</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Dashboard
            </a>
            <a asp-action="Create" class="btn btn-primary fw-bold shadow-sm">
                <i class="bi bi-plus-lg me-1"></i> Tạo Voucher Mới
            </a>
        </div>
    </div>

    <!-- Alert Notifications -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 rounded-3 mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 rounded-3 mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search Bar -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-2">
            <div class="input-group">
                <span class="input-group-text bg-transparent border-0 ps-3 text-muted">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text" id="searchInput" class="form-control border-0 shadow-none" placeholder="Tìm kiếm voucher theo mã hoặc tên chương trình..." onkeyup="filterTable()">
            </div>
        </div>
    </div>

    <!-- Data Table Card -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="voucherTable">
                    <thead class="bg-light text-secondary text-uppercase small fw-bold">
                        <tr>
                            <th class="ps-4 py-3" style="width: 15%;">Mã Voucher</th>
                            <th class="py-3" style="width: 20%;">Tên Chương Trình</th>
                            <th class="py-3" style="width: 15%;">Giá Trị Giảm</th>
                            <th class="py-3" style="width: 10%;">Đơn Tối Thiểu</th>
                            <th class="py-3 text-center" style="width: 10%;">Còn Lại</th>
                            <th class="py-3" style="width: 15%;">Thời Gian</th>
                            <th class="py-3 text-center" style="width: 15%;">Trạng Thái</th>
                            <th class="py-3 text-end pe-4">Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded p-2 me-3 text-center border" style="min-width: 45px;">
                                                <i class="bi bi-ticket-perforated-fill text-primary fs-5"></i>
                                            </div>
                                            <span class="fw-bold text-dark text-uppercase font-monospace fs-6">@item.MaVoucher</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="fw-bold text-dark">@item.TenChuongTrinh</span>
                                    </td>
                                    <td>
                                        @if (item.LoaiGiamGia == 1) // Phần trăm
                                        {
                                            <span class="badge bg-info bg-opacity-10 text-info border border-info rounded-pill px-3">
                                                Giảm @item.GiaTriGiam.ToString("0")%
                                            </span>
                                            @if (item.GiamToiDa.HasValue)
                                            {
                                                <div class="small text-muted mt-1 fst-italic">Tối đa: @item.GiamToiDa.Value.ToString("#,##0")đ</div>
                                            }
                                        }
                                        else // Tiền mặt
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success border border-success rounded-pill px-3">
                                                Giảm @item.GiaTriGiam.ToString("#,##0")đ
                                            </span>
                                        }
                                    </td>
                                    <td class="text-muted small fw-bold">
                                        @item.DonToiThieu.ToString("#,##0")đ
                                    </td>
                                    <td class="text-center">
                                        <span class="fw-bold @(item.SoLuongConLai < 10 ? "text-danger" : "text-dark")">
                                            @item.SoLuongConLai
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column small">
                                            <span class="text-muted"><i class="bi bi-calendar-check me-1"></i> @item.NgayBatDau.ToString("dd/MM/yy")</span>
                                            <span class="text-muted"><i class="bi bi-calendar-x me-1"></i> @item.NgayKetThuc.ToString("dd/MM/yy")</span>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        @if (item.IsValid())
                                        {
                                            <span class="badge bg-success text-white rounded-pill px-3">
                                                Đang chạy
                                            </span>
                                        }
                                        else
                                        {
                                            if (!item.KichHoat)
                                            {
                                                <span class="badge bg-secondary rounded-pill px-3">Đã tắt</span>
                                            }
                                            else if (item.SoLuongConLai <= 0)
                                            {
                                                <span class="badge bg-danger rounded-pill px-3">Hết mã</span>
                                            }
                                            else if (DateTime.Now > item.NgayKetThuc)
                                            {
                                                <span class="badge bg-warning text-dark rounded-pill px-3">Hết hạn</span>
                                            }
                                            else if (DateTime.Now < item.NgayBatDau)
                                            {
                                                <span class="badge bg-info text-dark rounded-pill px-3">Sắp tới</span>
                                            }
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm">
                                            <a asp-action="Edit" asp-route-id="@item.MaVoucher" class="btn btn-sm btn-outline-primary" title="Sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.MaVoucher" class="btn btn-sm btn-outline-danger" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-3 opacity-25">
                        <i class="bi bi-ticket-perforated" style="font-size: 4rem;"></i>
                    </div>
                    <h5 class="text-secondary fw-bold">Chưa có mã giảm giá nào</h5>
                    <p class="text-muted small">Hãy tạo voucher đầu tiên để thu hút khách hàng.</p>
                    <a asp-action="Create" class="btn btn-sm btn-primary mt-2">Tạo Voucher Ngay</a>
                </div>
            }
        </div>
        @if (Model != null && Model.Any())
        {
            <div class="card-footer bg-white border-top border-light py-3">
                <div class="small text-muted text-center">Hiển thị @Model.Count() mã giảm giá</div>
            </div>
        }
    </div>
</div>

<script>
    // Hàm lọc bảng đơn giản (Client-side)
    function filterTable() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("searchInput");
        filter = input.value.toUpperCase();
        table = document.getElementById("voucherTable");
        tr = table.getElementsByTagName("tr");

        for (i = 0; i < tr.length; i++) {
            // Tìm trong cột Mã (index 0) và Tên (index 1)
            var tdCode = tr[i].getElementsByTagName("td")[0];
            var tdName = tr[i].getElementsByTagName("td")[1];

            if (tdCode || tdName) {
                var txtCode = tdCode.textContent || tdCode.innerText;
                var txtName = tdName.textContent || tdName.innerText;

                if (txtCode.toUpperCase().indexOf(filter) > -1 || txtName.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
</script>